  "dependencies": {
    "@tailwindcss/vite": "^4.1.7",
    "react": "^19.1.0",
    "react-dom": "^19.1.0",
    "react-modal-image": "^2.6.0",
    "react-router-dom": "^6.30.1",
    "tailwindcss": "^4.1.7"
